<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
        SYSTEM
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.hibernate.test.filter">

    <class name="LineItem" table="ORDER_ITEM">
    	<id name="id" column="ITEM_ID" >
    		<generator class="native"/>
    	</id>

	    <many-to-one name="order" class="Order" column="ORDER_ID" cascade="none" not-null="true"/>
	    <property name="sequence" column="SEQ" type="int" not-null="true"/>
	    <many-to-one name="product" class="Product" column="PRODUCT_ID" cascade="none"/>
	    <property name="quantity" column="AMT" type="long" not-null="true"/>
	</class>

</hibernate-mapping>